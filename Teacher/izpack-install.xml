<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>
<installation version="1.0">
  <info>
    <appname>Magellan Teacher Plugin</appname>
    <appversion>0.10.5-nightly</appversion>
    <appsubpath>Magellan</appsubpath>
    <authors>
      <author name="Steffen Mecke" email="stm_@users.sourceforge.net"/>
    </authors>
    <url>http://magellan-client.sourceforge.net/</url>
    <uninstaller write="no"/>
    <javaversion>1.5</javaversion>
  </info>
  
  <guiprefs width="640" height="480" resizable="no"/>
  
  <locale>
    <langpack iso3="eng"/>
    <langpack iso3="deu"/>
  </locale>
  
  <resources>
    <res id="InfoPanel.info"   src="README.md"/>
    <res id="useNativeLAF"     src="README.md"/>
  </resources>

  <panels>
    <panel classname="HelloPanel"/>
    <panel classname="InfoPanel"/>
    <panel classname="MagellanPluginTargetPanel"/> 
    <!--<panel classname="PacksPanel"/>-->
    <panel classname="InstallPanel"/>
    <panel classname="SimpleFinishPanel"/>
  </panels>

  <packs>
    <pack name="Teacher Plugin for Magellan2" required="yes">
      <description>A plugin for Magellan2 for easily teaching units.</description>
      <file src="doc"                            targetdir="$INSTALL_PATH/doc/teacher"/>
      <file src="README.md"                      targetdir="$INSTALL_PATH/doc/teacher"/>
      <file src="teacher-plugin.jar"             targetdir="$INSTALL_PATH/plugins"/>
      <file src="etc"                            targetdir="$INSTALL_PATH"/>
      <file src="lib"                            targetdir="$INSTALL_PATH"/>
    </pack>
  </packs>
</installation>