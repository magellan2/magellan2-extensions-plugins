<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>
<installation version="1.0">
  <info>
    <appname>Magellan MemoryWatch Plugin</appname>
    <appversion>1.0.1</appversion>
    <appsubpath>Magellan</appsubpath>
    <authors>
      <author name="Thoralf Rickert" email="thoralf@m84.de"/>
      <author name="Fiete" email="sf@fietefietz.de"/>
      <author name="Steffen Mecke" email="stm2@users.sourceforge.net"/>
      <author name="Steve Wagner" email="lanwin@users.sourceforge.net"/>
      <author name="Ralf Duckstein" email="sf.net@duckstein.net"/>
      <author name="Mar'ek Khadar" email="regdokhan@gmail.com"/>
    </authors>
    <url>https://magellan2.github.io/</url>
    <uninstaller write="no"/>
    <javaversion>11</javaversion>
  </info>
  
  <guiprefs width="640" height="480" resizable="no"/>
  
  <locale>
    <langpack iso3="eng"/>
    <langpack iso3="deu"/>
  </locale>
  
  <resources>
    <res id="InfoPanel.info"   src="README.md"/>
    <res id="useNativeLAF"     src="README.md"/>
  </resources>

  <panels>
    <panel classname="HelloPanel"/>
    <panel classname="InfoPanel"/>
    <panel classname="MagellanPluginTargetPanel"/>
    <!--<panel classname="PacksPanel"/>-->
    <panel classname="InstallPanel"/>
    <panel classname="SimpleFinishPanel"/>
  </panels>

  <packs>
    <pack name="MemoryWatch for Magellan2" required="yes">
      <description>A plugin for Magellan2 showing the current memory usage of Magellan2.</description>
      <file src="doc"                            targetdir="$INSTALL_PATH/doc/memorywatchplugin"/>
      <file src="memorywatch-plugin.jar"         targetdir="$INSTALL_PATH/plugins"/>
      <file src="etc"                            targetdir="$INSTALL_PATH"/>
      <file src="lib"                            targetdir="$INSTALL_PATH"/>
    </pack>
  </packs>
</installation>
