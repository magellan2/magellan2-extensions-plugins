<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>
<installation version="1.0">
  <info>
    <appname>Magellan Statistics Plugin</appname>
    <appversion>0.6</appversion>
    <appsubpath>Magellan</appsubpath>
    <authors>
      <author name="Thoralf Rickert" email="thoralf@m84.de"/>
    </authors>
    <url>https://magellan2.github.io/</url>
    <uninstaller write="no"/>
    <javaversion>11</javaversion>
  </info>
  
  <guiprefs width="640" height="480" resizable="no"/>
  
  <locale>
    <langpack iso3="eng"/>
    <langpack iso3="deu"/>
  </locale>
  
  <resources>
    <res id="InfoPanel.info"   src="README.md"/>
    <res id="useNativeLAF"     src="README.md"/>
  </resources>

  <panels>
    <panel classname="HelloPanel"/>
    <panel classname="InfoPanel"/>
    <panel classname="MagellanPluginTargetPanel"/> 
    <!--<panel classname="PacksPanel"/>-->
    <panel classname="InstallPanel"/>
    <panel classname="SimpleFinishPanel"/>
  </panels>

  <packs>
    <pack name="Statistics Plugin for Magellan2" required="yes">
      <description>A plugin for Magellan2 that allows it to compare the report with historic data of the same object.</description>
      <file src="doc"                            targetdir="$INSTALL_PATH/doc/statisticsplugin"/>
      <file src="README.md"                      targetdir="$INSTALL_PATH/doc/statisticsplugin"/>
      <file src="statistics-plugin.jar"          targetdir="$INSTALL_PATH/plugins/statisticsplugin"/>
      <file src="etc"                            targetdir="$INSTALL_PATH"/>
      <file src="lib"                            targetdir="$INSTALL_PATH/plugins/statisticsplugin"/>
    </pack>
  </packs>
</installation>
